<% @products.each do |product| %>
  <div>
    <h1><%= product.name %></h1>
    <p id='product-<%= product.id %>'><%= truncate product.description %></p>
    <div id='product-<%= product.id %>-inventory'></div>
    <button type="button" class="js-more" data-id="<%= product.id %>" value="More Info">More Info</button>
  </div>
<% end %>
